{
	"name": "2cloud",
	"version": "3.0",
	"manifest_version": 2,
	"description": "Send your links between your devices.",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"browser_action": {
		"default_icon": "images/disconnected.png",
		"default_title": "Disconnected from server.",
		"default_popup": "browser_actions/disconnected.html"
	},
	"permissions": [
		"<all_urls>",
		"contextMenus",
		"tabs"
	],
	"background": {
		"page": "background.html"
	},
	"content_security_policy": "default-src 'self' https://*.2cloud.org; connect-src 'self' *"
}
